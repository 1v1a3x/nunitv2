<?xml version="1.0"?>
<project name="Samples" default="build">

    <!--
        Required properties:
            * bin.dir               - bin directory
            * src.dir               - source location(build) or target(copy)
            * build.debug           - (true|false) debug build?
            * build.defines.csc     - build defines for build config
            * runtime.defines.csc   - build defines for target framework
    -->

    <target name="build" depends="copy">
        <vjc target="library" output="${bin.dir}/jsharp.dll"
          unless="${build.mono}" failonerror="false">
            <sources basedir="${src.dir}/samples/jsharp">
                <includes name="*.jsl"/>
            </sources>
            <references>
                <includes name="${bin.dir}/nunit.framework.dll"/>
            </references>
        </vjc>
    </target>

    <target name="copy">
        <copy todir="${src.dir}/samples/jsharp">
            <fileset basedir=".">
                <includes name="jsharp.vjsproj"/>
                <includes name="jsharp.build"/>
                <includes name="*.jsl"/>
                <includes name="readme.txt"/>
            </fileset>
        </copy>
    </target>
</project>
