<?xml version="1.0"?>
<project name="NUnit.UiKit.Tests" default="build">

  <property name="project.src.dir" value="../.."
    unless="${property::exists('project.src.dir')}"/>

  <include buildfile="..\..\nunit.build.include"/>

  <target name="clean" depends="set-build-dir">
    <delete file="${current.build.dir}/nunit.uikit.tests.dll" failonerror="false"/>
    <delete file="${current.build.dir}/nunit.uikit.tests.pdb" failonerror="false"/>
  </target>

  <target name="build" depends="make-build-dir">
    <csc target="library" 
        output="${current.build.dir}/nunit.uikit.tests.dll" 
        debug="${build.debug}" define="${build.defines.csc}">
      <sources basedir=".">
        <include name="*.cs"/>
      </sources>
      <references basedir="${current.build.dir}">
        <include name="nunit.framework.dll"/>
        <include name="nunit.core.dll"/>
        <include name="nunit.util.dll"/>
        <include name="nunit.uikit.dll"/>
        <include name="test-utilities.dll"/>
        <include name="mock-assembly.dll"/>
        <include name="notestfixtures-assembly.dll"/>
      </references>
    </csc>
  </target>

  <target name="package">
    <copy todir="${package.src.dir}/GuiComponents/tests">
      <fileset basedir=".">
        <include name="nunit.uikit.tests.csproj"/>
        <include name="nunit.uikit.tests.build"/>
        <include name="nunit.uikit.tests.dll.config"/>
        <include name="*.cs"/>
      </fileset>
    </copy>
  </target>
</project>
