<?xml version="1.0"?>
<project name="NUnit-Gui.Tests" default="build">

  <include buildfile="../../nunit.project.include"/>

  <property name="current.build.output" value="nunit-gui.tests"/>

  <target name="build" depends="make-build-dir">
    <csc target="library" 
        output="${current.build.dir}/nunit-gui.tests.dll" 
        debug="${build.debug}" define="${build.defines.csc}">
      <sources basedir=".">
        <include name="*.cs"/>
      </sources>
      <references basedir="${current.build.dir}">
        <include name="nunit-gui-runner.dll"/>
        <include name="nunit.util.dll"/>
        <include name="nunit.framework.dll"/>
        <include name="test-utilities.dll"/>
      </references>
    </csc>
  </target>

  <target name="package">
    <copy todir="${package.src.dir}/GuiRunner/tests">
      <fileset basedir=".">
        <include name="nunit-gui.tests.csproj"/>
        <include name="nunit-gui.tests.build"/>
        <include name="*.cs"/>
        <include name="nunit-gui.tests.dll.config"/>
      </fileset>
    </copy>
  </target>
</project>
