<?xml version="1.0"?>
<project name="NUnit.Extensions" default="build">

    <!--
        Required properties:
            * bin.dir               - bin directory
            * src.dir               - source location(build) or target(copy)
            * build.debug           - (true|false) debug build?
            * build.defines.csc     - build defines for build config
            * runtime.defines.csc   - build defines for target framework
    -->

    <target name="build" depends="copy">
        <csc target="library" output="${bin.dir}/nunit.extensions.dll"
                debug="${build.debug}" define="${build.defines.csc},${runtime.defines.csc}">
            <sources basedir="${src.dir}/extensions">
                <includes name="**/*.cs"/>
            </sources>
            <references>
                <includes name="${bin.dir}/nunit.core.dll"/>
            </references>
        </csc>
    </target>

    <target name="copy">
        <copy todir="${src.dir}/extensions">
            <fileset basedir=".">
                <includes name="nunit.extensions.dll.csproj"/>
                <includes name="nunit.extensions.build"/>
                <includes name="AssemblyInfo.cs"/>
                <includes name="RepeatedTest.cs"/>
            </fileset>
        </copy>
    </target>
</project>
