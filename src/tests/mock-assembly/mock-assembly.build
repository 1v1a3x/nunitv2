<?xml version="1.0"?>
<project name="NUnit.Tests" default="build">

  <property name="project.src.dir" value="../.."
    unless="${property::exists('project.src.dir')}"/>

  <include buildfile="..\..\nunit.build.include"/>

  <target name="build" depends="make-build-dir">
    <csc target="library" 
        output="${current.build.dir}/mock-assembly.dll" 
        debug="${build.debug}" define="${build.defines.csc}">
      <sources basedir=".">
        <includesfile name="sources.include"/>
      </sources>
      <references basedir="${current.build.dir}">
        <include name="nunit.framework.dll"/>
        <include name="nunit.core.dll"/>
      </references>
    </csc>

    <copy file="mock-assembly.dll.config" todir="${current.build.dir}"/>
  </target>

  <target name="package">
    <copy todir="${package.src.dir}/tests/mock-assembly">
      <fileset basedir=".">
        <include name="mock-assembly.csproj"/>
        <include name="mock-assembly.build"/>
        <include name="mock-assembly.dll.config"/>                <include name="sources.include"/>
        <includesfile name="sources.include"/>
      </fileset>
    </copy>
  </target>
</project>
