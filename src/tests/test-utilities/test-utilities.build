<?xml version="1.0"?>
<project name="NUnit.TestsUtilities" default="build">

  <property name="project.src.dir" value="../.."
    unless="${property::exists('project.src.dir')}"/>

  <include buildfile="..\..\nunit.build.include"/>

  <target name="clean" depends="set-build-dir">
    <delete file="${current.build.dir}/test-utilities.dll" failonerror="false"/>
    <delete file="${current.build.dir}/test-utilities.pdb" failonerror="false"/>
  </target>

  <target name="build" depends="make-build-dir">
    <csc target="library" 
        output="${current.build.dir}/test-utilities.dll" 
        debug="${build.debug}" define="${build.defines.csc}">
      <sources basedir=".">
        <includesfile name="sources.include"/>
      </sources>
      <references basedir="${current.build.dir}">
        <include name="nunit.framework.dll"/>
        <include name="nunit.core.dll"/>
        <include name="nunit.util.dll"/>
      </references>
    </csc>
  </target>

  <target name="package">
    <copy todir="${package.src.dir}/tests/test-utilities">
      <fileset basedir=".">
        <include name="test-utilities.csproj"/>
        <include name="test-utilities.build"/>
        <include name="sources.include"/>
        <includesfile name="sources.include"/>
      </fileset>
    </copy>
  </target>
</project>
