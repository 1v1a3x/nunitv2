<?xml version="1.0"?>
<project name="NUnit.TestsUtilities" default="build">

    <!--
        Required properties:
            * bin.dir               - bin directory
            * src.dir               - source location(build) or target(copy)
            * build.debug           - (true|false) debug build?
            * build.mono            - (true|false) mono build?
            * build.defines.csc     - build defines for build config
    -->

    <target name="build" depends="copy">
        <csc target="library" output="${bin.dir}/test-utilities.dll" debug="${build.debug}" define="${build.defines.csc}">
            <sources basedir="${src.dir}/tests/test-utilities">
                <include name="*.cs"/>
            </sources>
            <references basedir="${bin.dir}">
                <include name="nunit.framework.dll"/>
                <include name="nunit.core.dll"/>
                <include name="nunit.util.dll"/>
            </references>
        </csc>
    </target>

    <target name="copy">
        <copy todir="${src.dir}/tests/test-utilities">
            <fileset basedir=".">
                <include name="test-utilities.csproj"/>
                <include name="test-utilities.build"/>
                <include name="*.cs"/>
            </fileset>
        </copy>
    </target>

</project>
